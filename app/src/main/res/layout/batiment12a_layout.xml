<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:alpha="@dimen/batimentsAlpha"
    android:background="@drawable/circle_shape_maurienne"
    android:orientation="vertical"
    android:padding="@dimen/batimentsPadding"
    android:gravity="center">

    <TextView
        android:id="@+id/tvNom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/batiment12a_nom"
        android:textSize="@dimen/batimentsNom"
        android:textColor="@color/batimentsNom" />

    <TextView
        android:id="@+id/tvDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/batimentsDistance"
        android:textSize="@dimen/batimentsDistance"
        android:textAlignment="center" />
</LinearLayout>